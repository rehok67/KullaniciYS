{
  "info": {
    "name": "Kullanıcı Yönetim Sistemi API",
    "description": "ASP.NET Web API - Kullanıcı Yönetim Sistemi",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\",\n  \"fullName\": \"Test User\",\n  \"phone\": \"555-1234\",\n  \"department\": \"IT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get All Users (with filters)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/users?search=admin&role=Admin&isActive=true",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "search",
                  "value": "admin"
                },
                {
                  "key": "role",
                  "value": "Admin"
                },
                {
                  "key": "isActive",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get User By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"newuser\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"New User\",\n  \"phone\": \"555-5555\",\n  \"department\": \"Sales\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Updated Name\",\n  \"email\": \"updated@example.com\",\n  \"phone\": \"555-9999\",\n  \"department\": \"Marketing\",\n  \"isActive\": true,\n  \"roleIds\": [1, 2]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/users/2",
              "host": ["{{baseUrl}}"],
              "path": ["users", "2"]
            }
          }
        },
        {
          "name": "Toggle User Status",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/users/1/toggle-status",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1", "toggle-status"]
            }
          }
        }
      ]
    },
    {
      "name": "Roles",
      "item": [
        {
          "name": "Get All Roles",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/roles",
              "host": ["{{baseUrl}}"],
              "path": ["roles"]
            }
          }
        },
        {
          "name": "Get Role By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/roles/1",
              "host": ["{{baseUrl}}"],
              "path": ["roles", "1"]
            }
          }
        },
        {
          "name": "Create Role",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Editor\",\n  \"description\": \"İçerik düzenleyici\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/roles",
              "host": ["{{baseUrl}}"],
              "path": ["roles"]
            }
          }
        },
        {
          "name": "Update Role",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Editor\",\n  \"description\": \"İçerik düzenleme yetkisi\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/roles/4",
              "host": ["{{baseUrl}}"],
              "path": ["roles", "4"]
            }
          }
        },
        {
          "name": "Delete Role",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/roles/4",
              "host": ["{{baseUrl}}"],
              "path": ["roles", "4"]
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Dashboard Stats",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/dashboard/stats",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "stats"]
            }
          }
        },
        {
          "name": "Get Recent Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/dashboard/recent-users?count=10",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "recent-users"],
              "query": [
                {
                  "key": "count",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
